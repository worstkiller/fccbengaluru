<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/llErrorConnectivity"
    android:visibility="gone"
    android:orientation="vertical">

    <TextView
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:drawableLeft="@drawable/ic_action_info"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_gravity="center|center_vertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:text="@string/error_connect_to_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btTryAgain"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/button_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>