<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    android:elevation="@dimen/margin_8"
    android:id="@+id/cvFeed"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_8">

        <ImageView
            android:id="@+id/ivFeedCover"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_icon_msg"/>

        <TextView
            android:id="@+id/tvFeedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivFeedCover"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>